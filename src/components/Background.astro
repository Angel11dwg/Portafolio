<svg width="100%" height="100%" xmlns="http://www.w3.org/2000/svg" class="background-svg">
    <defs>
        <linearGradient id="grad1" x1="0%" y1="0%" x2="100%" y2="100%">
            <stop offset="0%" style="stop-color:#2a475e;stop-opacity:1" />
            <stop offset="100%" style="stop-color:#1b2838;stop-opacity:1" />
        </linearGradient>
    </defs>

    
    <g class="rotating-group">
        <polygon points="300,30 350,230 260,250" fill="url(#grad1)" />
        <polygon points="300,30 350,230 260,250" fill="url(#grad1)" transform="rotate(45 300 300)" />
        <polygon points="300,30 350,230 260,250" fill="url(#grad1)" transform="rotate(90 300 300)" />
        <polygon points="300,30 350,230 260,250" fill="url(#grad1)" transform="rotate(135 300 300)" />
        <polygon points="300,30 350,230 260,250" fill="url(#grad1)" transform="rotate(180 300 300)" />
        <polygon points="300,30 350,230 260,250" fill="url(#grad1)" transform="rotate(225 300 300)" />
        <polygon points="300,30 350,230 260,250" fill="url(#grad1)" transform="rotate(270 300 300)" />
        <polygon points="300,30 350,230 260,250" fill="url(#grad1)" transform="rotate(315 300 300)" />
    </g>
</svg>

<style>
    .background-svg {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        pointer-events: none;
    }

    .rotating-group {
        animation: rotate-animation 10s linear infinite;
        transform-origin: 300px 300px; 
    }

    @keyframes rotate-animation {
        from {
            transform: rotate(0deg);
        }
        to {
            transform: rotate(360deg);
        }
    }
</style>
